<%- include ../common/base.ejs %>
    <div class="st_container">
        <div class="st_title">管理员列表</div>
        <div class="st_body">
            <div class="st_tips">
                <p>该页面展示了平台所有的管理员。。</p>
            </div>
            <div class="btns_div">
                <a href="{:url('admin/staff/staffAddShow')}" class="st_btn_h28">添加管理员</a>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>用户名</th>
                        <th>所属角色</th>
                        <th>加入时间</th>
                        <th>最后登录时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    {if $list['total']>0} {volist name='list["data"]' id='vo'}
                    <tr>
                        <td>
                            {$vo.s_login_name}
                        </td>
                        <td>{$vo.r_name}</td>
                        <td>{$vo.s_create_time}</td>
                        <td>{$vo.s_last_time}</td>
                        <td>
                            <div class="st_btns">
                                {if $vo.s_is_admin==0}
                                <a href="{:url('admin/staff/staffEditShow',array('id'=>$vo.s_id))}" class="st_edit">编辑</a>
                                <!--<a href="javascript:void(0);" onclick="del({$vo.s_id})" class="st_del">删除</a>-->
                                <a href="javascript:void(0);" data-id="{$vo.s_id}" class="st_del">删除</a>
                                {/if}
                            </div>
                        </td>
                    </tr>
                    {/volist} {else /}
                    <tr>
                        <td colspan="5" style="padding: 60px 0px;">没有找到任何记录 </td>
                    </tr>
                    {/if}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100">

                            <div class="st_pages" id="wst-pager">
                            </div>
                            <div style="float: right;height: 50px;line-height: 50px;margin-right: 15px;">总计{$list['total']}条记录</div>
                        </td>
                    </tr>
                </tfoot>
            </table>
            <script src="/js/admin/plugins/layui/layui.js"></script>
            <script type='text/javascript'>
                $(".st_del").on('click', function () {
                    var that = $(this);
                    //询问框
                    layer.confirm('您确定要删除此条记录？', {
                        btn: ['确定', '取消'] //按钮
                    }, function () {
                        $(".layui-layer-shade").hide();
                        $(".layui-layer-dialog").hide();
                        var id = that.attr('data-id');
                        del(id);
                    });
                });
                function del(id) {
                    $.post("{:url('admin/Staff/staffDel')}", { id: id }, function (data) {
                        if (data.status == 1) {
                            popupTip(data.msg, true, function () {
                                location.reload();
                            });
                        } else if (data.status == -999) {
                            popupTip(data.msg, false);
                        } else {
                            popupTip(data.msg, false);
                        }
                    })
                }
